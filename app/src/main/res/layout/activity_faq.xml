<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pet_blue"
    tools:context=".menuItems.FAQActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/get_back"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@color/pet_blue"
            android:clickable="false"
            android:foregroundGravity="left"
            android:src="@drawable/ic_back"
            android:paddingTop="16dp"
            tools:ignore="ContentDescription,UnusedAttribute"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="252dp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/faq_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/walkway_expand_ultrabold"
        android:gravity="center_horizontal"
        android:text="@string/faq"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/faq_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/faq"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/faq_scroll"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faq_photo">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <Button
                android:id="@+id/first_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_edge"
                android:drawableRight="@drawable/ic_navigate_next"
                android:paddingStart="40dp"
                android:paddingLeft="10dp"
                android:paddingEnd="40dp"
                android:text="@string/wie_kann_ich_freund_einladen_und_gutscheine_erhalten"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="16dp"
                android:drawableEnd="@drawable/ic_navigate_next" />


            <TextView
                android:id="@+id/first_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_btn"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@color/white"
                android:text="@string/wie_kann_ich"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/second_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/first_txt"
                android:layout_marginTop="0dp"
                android:background="@drawable/card_edge"
                android:drawableRight="@drawable/ic_navigate_next"
                android:paddingStart="40dp"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingEnd="40dp"
                android:text="@string/wie_kann_ich_freund_einladen_und_gutscheine_erhalten"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="16dp"
                android:drawableEnd="@drawable/ic_navigate_next" />


        </RelativeLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>