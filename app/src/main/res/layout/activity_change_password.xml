<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/change_psw"
    android:fitsSystemWindows="true"
    android:background="@color/pet_blue"
    android:orientation="vertical"
    tools:context=".RegisterLogin.RegisterActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="456dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/solu_logo_min"
        tools:ignore="ContentDescription" />





        <LinearLayout
            android:id="@+id/formContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/walkway_expand_ultrabold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/bitte_deine_e_mail_eingeben" />

            <!-- Email Label -->
            <RelativeLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">




                    <EditText
                        android:id="@+id/til_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/email_icon"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/walkway_expand_ultrabold"
                        android:textColor="@color/white"
                        android:hint="@string/email"
                        android:textColorHint="@color/white"
                        android:drawableLeft="@drawable/email_icon"
                        android:autofillHints="@string/email" />


            </RelativeLayout>



        </LinearLayout>






    <ImageButton
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="213dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/walkway_expand_ultrabold"
        android:src="@drawable/ic_next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:contentDescription="@string/next_btn"
        android:layout_marginStart="140dp" />






</RelativeLayout>
